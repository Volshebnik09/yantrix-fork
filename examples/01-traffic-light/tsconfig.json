{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"incremental": true,
		"jsx": "preserve",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowJs": true,
		"noEmit": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js",
		"src/**/*.jsx",
		"src/**/*.cjs",
		"src/**/*.mjs"
	],
	"exclude": ["node_modules"]
}
