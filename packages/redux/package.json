{
	"name": "@yantrix/automata-redux",
	"type": "module",
	"version": "0.0.1",
	"description": "Redux automata integration for Redux",
	"author": "Alexander Uskov <neolord.tmb@gmail.com>",
	"license": "MIT",
	"homepage": "https://tfcp68.github.io/yantrix",
	"repository": {
		"directory": "packages/redux",
		"type": "git",
		"url": "git+https://github.com/tfcp68/yantrix.git"
	},
	"bugs": {
		"url": "https://github.com/tfcp68/yantrix/issues"
	},
	"keywords": [
		"FSM",
		"Miely Machine"
	],
	"exports": {
		"types": "./dist/index.d.ts",
		"default": "./dist/index.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "npm run build && node dist/index.js",
		"build": "tsc --noEmit && tsup",
		"format": "eslint --fix --format=pretty .",
		"lint": "eslint --format=pretty .",
		"prepack": "pnpm lint && pnpm test && pnpm build",
		"test": "vitest run --outputFile=../../test_reports/redux.md",
		"create_test_automata": "pnpm yantrix codegen __tests__/fixtures/game_phase.mermaid --outfile __tests__/fixtures/GamePhaseAutomataTest.ts --language TypeScript --className GamePhaseTest"
	},
	"directories": {
		"lib": "src",
		"test": "__tests__"
	},
	"dependencies": {
		"@yantrix/cli": "workspace:^",
		"@yantrix/codegen": "workspace:^",
		"@yantrix/utils": "workspace:^"
	},
	"devDependencies": {
		"@reduxjs/toolkit": "^2.2.7",
		"@yantrix/automata": "workspace:^",
		"tsx": "^4.19.0"
	}
}
